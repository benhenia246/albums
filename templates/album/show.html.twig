{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <h1>Album</h1>

    <table class="table">
        <tbody>
{#            <tr>#}
{#                <th>Id</th>#}
{#                <td>{{ album.id }}</td>#}
{#            </tr>#}
            <tr>
                <th>Title</th>
                <td>{{ album.title }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td><img style="width: 300px; height: 300px;" src="{{ album.cover }}" alt=""></td>
            </tr>
            <tr>
                <th>ReleaseDate</th>
                <td>{{ album.releaseDate ? album.releaseDate|date('Y-m-d') : '' }}</td>


            </tr>
            <tr>
                <th>Songs</th>
                <td>
                {% for song in album.songs %}
                    <a style="" href="{{ path('song_show', {'id': song.id}) }}">{{ song.songTitle }}</a>,
                 {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Review</th>


                {% if (album.review == true) %}
                    <td>{{ album.review }}</td>

                    {% else %}
                        <td>no review ezebi </td>

                {% endif %}

            </tr>
        </tbody>
    </table>

    <a href="{{ path('album_index') }}">back to list</a>

    <a href="{{ path('album_edit', {'id': album.id}) }}">edit</a>

    {{ include('album/_delete_form.html.twig') }}
{% endblock %}
